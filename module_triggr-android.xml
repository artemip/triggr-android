<?xml version="1.0" encoding="UTF-8"?>
<project name="module_triggr-android" default="compile.module.triggr-android">
  <dirname property="module.triggr-android.basedir" file="${ant.file.module_triggr-android}"/>
  
  <property name="module.jdk.home.triggr-android" value="${jdk.home.android_4.2.2_platform}"/>
  <property name="module.jdk.bin.triggr-android" value="${jdk.bin.android_4.2.2_platform}"/>
  <property name="module.jdk.classpath.triggr-android" value="jdk.classpath.android_4.2.2_platform"/>
  
  <property name="compiler.args.triggr-android" value="${compiler.args}"/>
  
  <property name="triggr-android.output.dir" value="${module.triggr-android.basedir}/out/production/triggr-android"/>
  <property name="triggr-android.testoutput.dir" value="${module.triggr-android.basedir}/out/test/triggr-android"/>
  
  <path id="triggr-android.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="triggr-android.module.production.classpath">
    <path refid="${module.jdk.classpath.triggr-android}"/>
    <path refid="library.android-support-v4.classpath"/>
    <path refid="library.net.liftweb:lift-json_2.10:3.0-snapshot.classpath"/>
    <path refid="library.scala-compiler.classpath"/>
    <path refid="library.scala.classpath"/>
  </path>
  
  <path id="triggr-android.runtime.production.module.classpath">
    <pathelement location="${triggr-android.output.dir}"/>
    <path refid="library.android-support-v4.classpath"/>
    <path refid="library.net.liftweb:lift-json_2.10:3.0-snapshot.classpath"/>
    <path refid="library.scala-compiler.classpath"/>
    <path refid="library.scala.classpath"/>
  </path>
  
  <path id="triggr-android.module.classpath">
    <path refid="${module.jdk.classpath.triggr-android}"/>
    <pathelement location="${triggr-android.output.dir}"/>
    <path refid="library.android-support-v4.classpath"/>
    <path refid="library.net.liftweb:lift-json_2.10:3.0-snapshot.classpath"/>
    <path refid="library.scala-compiler.classpath"/>
    <path refid="library.scala.classpath"/>
  </path>
  
  <path id="triggr-android.runtime.module.classpath">
    <pathelement location="${triggr-android.testoutput.dir}"/>
    <pathelement location="${triggr-android.output.dir}"/>
    <path refid="library.android-support-v4.classpath"/>
    <path refid="library.net.liftweb:lift-json_2.10:3.0-snapshot.classpath"/>
    <path refid="library.scala-compiler.classpath"/>
    <path refid="library.scala.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.triggr-android">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.triggr-android">
    <patternset refid="excluded.from.module.triggr-android"/>
  </patternset>
  
  <path id="triggr-android.module.sourcepath">
    <dirset dir="${module.triggr-android.basedir}">
      <include name="src"/>
      <include name="gen"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.triggr-android" depends="compile.module.triggr-android.production,compile.module.triggr-android.tests" description="Compile module triggr-android"/>
  
  <target name="compile.module.triggr-android.production" depends="register.custom.compilers" description="Compile module triggr-android; production classes">
    <mkdir dir="${triggr-android.output.dir}"/>
    <javac2 destdir="${triggr-android.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.triggr-android}/javac">
      <compilerarg line="${compiler.args.triggr-android}"/>
      <bootclasspath refid="triggr-android.module.bootclasspath"/>
      <classpath refid="triggr-android.module.production.classpath"/>
      <src refid="triggr-android.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.triggr-android"/>
    </javac2>
    
    <copy todir="${triggr-android.output.dir}">
      <fileset dir="${module.triggr-android.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.triggr-android.basedir}/gen">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.triggr-android.tests" depends="register.custom.compilers,compile.module.triggr-android.production" description="compile module triggr-android; test classes" unless="skip.tests"/>
  
  <target name="clean.module.triggr-android" description="cleanup module">
    <delete dir="${triggr-android.output.dir}"/>
    <delete dir="${triggr-android.testoutput.dir}"/>
  </target>
</project>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerInside"
        android:src="@drawable/cbridge_logo_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="4dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp" >
        
	    <TextView
	        android:id="@+id/pairKeyPromptTextView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/pair_key_prompt"
	        android:textSize="24dp"/>
	
	    <EditText
	        android:id="@+id/pairKeyTextBox"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="24dp"
	        android:ems="10" />
	
	    <Button
	        android:id="@+id/pairButton"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:onClick="pairWithDevice"
	        android:text="Pair"/>

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:weightSum="0.5" >

	        <Button
	            android:id="@+id/lowerVolumeButton"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:onClick="lowerVolume"
	            android:text="Lower Volume" />

	        <Button
	            android:id="@+id/raiseVolumeButton"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="6dp"
	            android:onClick="raiseVolume"
	            android:text="Raise Volume" />

	    </LinearLayout>

    </LinearLayout>

</RelativeLayout>

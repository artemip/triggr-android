<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/containerView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_gravity="center"
            android:weightSum="1.0">
        <Button android:id="@+id/leftNavButton"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:background="#00000000"
                android:onClick="goBack"/>
        <Button android:id="@+id/rightNavButton"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:background="#00000000"
                android:onClick="goForward"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/mainView"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:paddingLeft="10dp"
                  android:paddingRight="10dp"
                  android:orientation="vertical">
        <TextView
                android:id="@+id/welcomeTextView"
                android:layout_marginTop="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_text"
                android:textSize="45dp"
                android:gravity="center"
                android:textColor="#BEBEBE" />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">
            <ImageView
                    android:id="@+id/leftNavArrowImageView"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/instructions_left"
                    android:contentDescription="@string/leftArrowContentDesc"/>
            <ViewFlipper
                android:id="@+id/viewFlipper"
                style="@style/InfoContainer"
                android:background="@drawable/infobox"
                android:layout_width="fill_parent"
                android:layout_height="320dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="35dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <LinearLayout
                        android:id="@+id/desktopInstallView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/download_desktop_app_instructions"
                            android:textSize="16dp"
                            android:layout_gravity="center"
                            android:textColor="#FFFFFF" />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/website_name"
                            android:textSize="16dp"
                            android:layout_gravity="center"
                            android:textColor="#24B4FE" />
                    <ImageView
                            android:id="@+id/laptopImageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="14dp"
                            android:layout_marginTop="30dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/instructions_laptop"
                            android:contentDescription="@string/laptopContentDesc"/>
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/desktopPairView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pairing_desktop_instructions"
                            android:textSize="16dp"
                            android:layout_gravity="center"
                            android:textColor="#FFFFFF" />
                    <ImageView
                            android:id="@+id/desktopAppImageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="50dp"
                            android:src="@drawable/instructions_showpairkey"
                            android:contentDescription="@string/desktopAppContentDesc"/>
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/mobilePairView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pairing_mobile_instructions"
                            android:textSize="16dp"
                            android:gravity="center"
                            android:textColor="#FFFFFF" />
                    <ImageView
                            android:id="@+id/mobileAppImageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/instructions_enterkey"
                            android:contentDescription="@string/mobileAppContentDesc"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pairing_connect_instructions"
                            android:layout_marginTop="16dp"
                            android:textSize="16dp"
                            android:gravity="center"
                            android:textColor="#FFFFFF" />
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/shareView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/thanks_for_using"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:textColor="#FFFFFF" />
                    <ImageView
                        android:id="@+id/shareAppImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/instructions_sharebig"
                        android:onClick="goToShare" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/feedback_instructions"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:textColor="#FFFFFF" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/rate_instructions"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:textColor="#24B4FE" />
                </LinearLayout>
            </ViewFlipper>
            <ImageView
                    android:id="@+id/rightNavArrowImageView"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-30dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/instructions_right"
                    android:contentDescription="@string/rightArrowContentDesc"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tutorialCircles"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/tutorialCircle0"
                android:src="@drawable/tutorial_circle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:contentDescription="" />
            <ImageView
                android:id="@+id/tutorialCircle1"
                android:src="@drawable/tutorial_circle_hollow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:contentDescription="" />
            <ImageView
                android:id="@+id/tutorialCircle2"
                android:src="@drawable/tutorial_circle_hollow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:contentDescription="" />
            <ImageView
                android:id="@+id/tutorialCircle3"
                android:src="@drawable/tutorial_circle_hollow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:contentDescription="" />
        </LinearLayout>

        <Button
            android:id="@+id/finishInstructionsButton"
            style="@style/CustomButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_gradient"
            android:onClick="startPairingActivity"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:text="@string/get_started"
            android:visibility="gone"/>
    </LinearLayout>
</FrameLayout>
